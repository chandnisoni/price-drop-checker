<% include header.ejs %>
<div>
  <div id="frame">
    <iframe src="<%= productUrl %>" srcdoc="<%= content %>" align="right"></iframe>
  </div>
  <div id="description" class="table-responsive">
    <table class="table table-striped table-hover">
      <tr>
        <td>Merchant:</td>
        <td><%= merchant %></td>
      </tr>
      <tr>
        <td>Product ID: </td>
        <td><%= productId %></td>
      </tr>
      <tr>
        <td>Product Name: </td>
        <td><%= productName %></td>
      </tr>
      <tr>
        <td>Product URL</td>
        <td><a href="<%= productUrl %>">Click here</a></td>
      </tr>
      <tr>
        <td>Last Price: </td>
        <td><%= lastPrice %></td>
      </tr>
      <tr>
        <td>Current Price: </td>
        <td><%= currentPrice %></td>
      </tr>
      <tr>
        <td>Price drop: </td>
        <td><%= priceDrop %></td>
      </tr>
    </table>
    <a id="prev" class="btn btn-primary" href="/browser?page=<%= prevPage %>&csv=<%= filename %>">Prev</a>
    <a id="next" class="btn btn-primary" href="/browser?page=<%= nextPage %>&csv=<%= filename %>">Next</a>

    <p class="x-frame-warning text-warning">* The product websites using "X-FRAME-OPTIONS: SAMEORIGIN" will be shown as blank on the right website preview. </p>
  </div>
</div>
<% include footer.ejs %>
